{
  "name": "madr-frontend-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web",
    "cms"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=web",
    "dev:cms": "npm run dev --workspace=cms",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:cms\"",
    "build:web": "npm run build --workspace=web",
    "build:cms": "npm run build --workspace=cms",
    "build:all": "npm run build:web && npm run build:cms",
    "install:all": "npm install",
    "clean": "rm -rf node_modules web/node_modules cms/node_modules web/dist cms/dist"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
